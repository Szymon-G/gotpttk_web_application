{% extends "index.html.twig" %}
{% block stylesheets %}
	<link href="https://fonts.googleapis.com/css?family=Didact+Gothic&display=swap" rel="stylesheet">
	<link href="{{ asset('../public/assets/css/index.css') }}" rel="stylesheet">
	<link href="{{ asset('../public/assets/css/button.css') }}" rel="stylesheet">
	<link href="{{ asset('../public/assets/css/login.css') }}" rel="stylesheet">
{% endblock %}
{% block body %}
	{{ include('header.html.twig') }}
	<div class="container">
		<div class="content">
			<div class="box">
				<form class="log__form" action='./reset' method="post">
					<h3>Podaj adres e-mail</h3>
					<input type="email" class="form__input" name="email" required/><br>
					<a class="form__err" name="emailErr" 
					style="visibility: {% for message in app.flashes('password') %}
					{{message}}{% endfor %};">Hasło zostało zresetowane</a>
					<a class="form__err" name="emailErr"
					style="visibility: {% for message in app.flashes('email') %}
					{{message}}{% endfor %};">Email niepoprawny</a>
					<button type="submit" class="button box__button">Zresetuj hasło</button>
				</form>
				<a class="link" href='login'>Powrót</a>
			</div>
			<div class="box__route"></div>
		</div>
	</div>
</div>
{{ include('footer.html.twig') }}{% endblock %}
